{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    // Disable defined but never used variables
    "no-unused-vars": "off", // Disable warning for defined but never used

    // Disable missing dependencies in useEffect
    "react-hooks/exhaustive-deps": "off", // Disable missing dependencies in useEffect

    // Disable warnings for unused variables, functions, and imports
    "no-unused-expressions": "off", // Disable warning for unused expressions

    // Disable the rule that throws errors for imports that are defined but never used
    "import/named": "off", // Allow named imports that are not used
    "import/default": "off", // Allow default imports that are not used
    "import/namespace": "off", // Allow namespace imports that are not used

    // Disable warnings for unused function arguments
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],

    // Disable warnings for unexpected any types
    "@typescript-eslint/no-explicit-any": "off", // Allow the use of "any" type

    // Disable warnings for missing return types on functions
    "@typescript-eslint/explicit-function-return-type": "off", // Allow functions without explicit return types

    // Disable warnings for missing prop types
    "react/prop-types": "off", // Allow components without prop types validation

    // Disable warnings for variables defined but not used
    "no-console": "off" // Allow console statements (useful for debugging)
  }
}
